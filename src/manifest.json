{
	"manifest_version": 2,
  "background": {
    "scripts": [
      "./background.js"
    ]
	},
	"content_scripts": [{
		"js": ["./content.js"],
		"matches": ["*://*/*", "file://*"]
	}],
	"browser_action": {
		"default_icon": "g8up.cn.png",
		"default_title": "__MSG_defaulttitle__",
		"default_popup": "popup.html"
	},
	"options_page": "option.html",
	"icons": {
		"128": "g8up-cn.png"
	},
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"offline_enabled": true,
	"permissions": [
		"tabs",
		"contextMenus"
	],
	"version": "2.2.0"
}